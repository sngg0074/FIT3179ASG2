{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Intentional Homicide Cases in Malaysian States",
  "width": 500,
  "height": 500,
  "data": {
    "url": "https://raw.githubusercontent.com/sngg0074/FIT3179ASG2/main/Dataset/Total_Employers_Contribution_By_Sector_and_State_2015_2017.csv"
  },
  "mark": "bar",
  "encoding": {
    "x": {"field": "State", "type": "ordinal"},
    "y": {"field": "Total", "type": "quantitative","scale": {"domain": [0, 10000]}},
    "color": {"field": "Sector", "type": "nominal", "title": "Sector"}
  },
  "transform": [
    {"filter": "datum.Year==year_slider"},
    {"stack": "Total", "groupby": ["State"]}
  ],
  "params": [
    {
      "name": "year_slider",
      "bind": {
        "input": "range",
        "min": 2015,
        "max": 2017,
        "step": 1,
        "name": "Select the Year:"
      },
      "value": 2015  
    }
  ],
  "config": {"view": {"stroke": "transparent"}}
}




