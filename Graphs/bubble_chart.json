  "scales": [
    {
      "name": "size",
      "domain": {"data": "tbl", "field": "Total"},
      "range": [300, 70000],
      "nice": true
    },
    {
      "name": "color",
      "type": "linear",
      "domain": [6000, 20000, 50000, 80000, 100000, 270000],
      "range": ["#a6d7ff", "#6bb1e1", "#3a8db6", "#00639d", "#003f77"]
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Total Employees Count",
      "gradientLength": 200,
      "gradientThickness": 20,
      "direction": "horizontal",
      "tickCount": 6,
      "titleFontSize": 12,
      "labelFontSize": 10,
      "orient": "bottom",
      "offset": -20
    }
  ],
  "marks": [
    {
      "name": "nodes",
      "type": "symbol",
      "from": {"data": "tbl"},
      "encode": {
        "enter": {
          "fill": {"scale": "color", "field": "Total"},
          "xfocus": {"signal": "width / 2"},
          "yfocus": {"signal": "height / 2"}
        },
        "update": {
          "size": {"signal": "scale('size', datum.Total)"},
          "stroke": {"value": "white"},
          "strokeWidth": {"value": 2},
          "tooltip": {"signal": "{'State': datum.State, 'Total Employees Count': datum.Total}"}
        }
      },
      "transform": [
        {
          "type": "force",
          "iterations": 100,
          "static": false,
          "forces": [
            {
              "force": "collide",
              "iterations": 2,
              "radius": {"expr": "sqrt(datum.size) / 2"}
            },
            {"force": "center", "x": {"signal": "width / 2"}, "y": {"signal": "height / 2"}},
            {"force": "x", "x": "xfocus"},
            {"force": "y", "y": "yfocus"}
          ]
        }
      ]
    },
    {
      "type": "text",
      "from": {"data": "nodes"},
      "encode": {
        "enter": {
          "align": {"value": "center"},
          "baseline": {"value": "middle"},
          "fontSize": {"value": 8},
          "fill": {"value": "white"},
          "text": {"field": "datum.State"}
        },
        "update": {"x": {"field": "x"}, "y": {"field": "y"}}
      }
    }
  ]
