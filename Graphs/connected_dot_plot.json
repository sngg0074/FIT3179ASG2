{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Employment by Occupation Category by Gender",
  "data": {"url": "https://raw.githubusercontent.com/sngg0074/FIT3179ASG2/a0038787b1a98fd7947d70c78a01d13cb950023b/Dataset/Employment_by_Occupation_Category_2010_2016.csv"},
  "transform": [
    {
      "filter": {
        "field": "Occupation_MASCO",
        "oneOf": ["Managerial", "Professional", "Technical", "Secretarial", "Service/Sales", "Agricultural", "Craft Workers", "Machine Operators", "General Workers"]
      }
    },
    {
      "filter": {
        "field": "gender",
        "oneOf": ["Male", "Female"]
      }
    },
    {"filter": "datum.year==year"}
  ],
  "width": 1000,
  "height": 400,
  "encoding": {
    "x": {
      "field": "Number_Employed",
      "type": "quantitative",
      "title": "Number of Employees",
      "scale": {"domain": [0, 37000]}, 
      "axis":  {
        "offset": 5,
        "ticks": false,
        "minExtent": 70,
        "domain": false,
        "titleFontSize":15,
        "labelFontSize": 12
      }
    },
    "y": {
      "field": "Occupation_MASCO",
      "type": "nominal",
      "title": "Occupation",
      "axis": {
        "offset": 5,
        "ticks": false,
        "minExtent": 70,
        "domain": false,
        "titleFontSize":15,
        "labelFontSize": 12
      }
    },
    "tooltip":[
      {"field": "gender", "type": "nominal", "title": "Gender"},
      {"field": "Occupation_MASCO", "type": "nominal", "title": "Occupation Category"},
      {"field": "Number_Employed", "type": "quantitative", "title": "Total Number of Employees"}
    ]
  },
  "layer": [
    {
      "mark": "line",
      "encoding": {
        "detail": {
          "field": "Occupation_MASCO",
          "type": "nominal"
        },
        "color": {"value": "#db646f"}
      }
    },
    {
      "mark": {
        "type": "point",
        "filled": true
      },
      "encoding": {
        "color": {
          "field": "gender",
          "type": "ordinal",
          "scale": {
            "domain": ["Male", "Female"],
            "range": ["#e6959c", "#911a24"]
          },
          "legend": {
            "title":"Gender of Employee",
            "titleFontSize": 15,
            "labelFontSize":12,
            "titleLimit": 0,
            "direction": "horizontal",
            "orient":"bottom",
            "gradientLength": 140,
            "padding": 50
          }        
        },
        "size": {"value": 250},
        "opacity": {"value": 0.7}
      }
    }
  ],
  "params": [
    {
      "name": "year",
      "value": 2010,
      "bind": {
        "input": "range",
        "min": 2010,
        "max": 2016,
        "step": 1,
        "name": "Select the year:"
      }
    }
  ]
  
}
