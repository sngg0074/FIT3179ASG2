{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {"url": "https://raw.githubusercontent.com/sngg0074/FIT3179ASG2/24921ca46ca0e6eb2791a98e33f3acfd82a231f4/Dataset/Employment_Status_by_Field_of_Study%202013_2016.csv"},
  "mark": "rect",
  "width": 1000,
  "height": 400,
  "encoding": {
    "y": {
      "field": "Employment_Status", 
      "type": "nominal", 
      "title": "Employment Status", "axis":  {
        "offset": 5,
        "ticks": false,
        "minExtent": 70,
        "domain": false,
        "titleFontSize":15,
        "labelFontSize": 12
      }
    },
    "x": {
      "field": "NEC_Description", 
      "title": "Field of Study", 
      "type": "nominal", 
      "axis":  {
        "offset": 5,
        "ticks": false,
        "minExtent": 70,
        "domain": false,
        "titleFontSize":15,
        "labelAngle": 45, 
        "labelFontSize": 12,
        "labelLimit": 0
      }
      
      },

    "tooltip":[
      {"field": "Employment_Status", "type": "nominal", "title": "Employment Status"},
      {"field": "NEC_Description", "type": "nominal", "title": "Field of Study"},
      {"field": "Total", "type": "quantitative", "title": "Total Individuals"}
    ]
  },
  "transform":[
    {"filter": "datum.year==year_slider"}],
  "config": {
    "axis": {"grid": true, "tickBand": "extent"}
  },
  "params": [
    {
      "name": "year_slider",
      "bind": {
        "input": "range",
        "min": 2013,
        "max": 2016,
        "step": 1,
        "name": "Select the Year:"
      },
      "value": 2013
    },

    {
      "name": "category_selection",
      "bind": {
          "input": "select",
          "options": [
              "Large",
              "SME"
          ],
          "labels":[
              "Large",
              "SME"
          ],
          "name": "Category Selection: "
      }
    }
  ],

  "layer": [
    {
      "mark": "rect",
      "encoding": {"color": {"field": "Total","legend": {
        "title":"Total Individuals",
        "titleFontSize": 15,
        "labelFontSize":12,
        "titleLimit": 0,
        "direction": "horizontal",
        "orient":"bottom",
        "gradientLength": 350,
        "padding": 0
      },
      "scale": {
        "type": "threshold",
        "domain": [10000, 20000, 30000, 40000],
        "range": ["#fdbe85", "#fd8d3c", "#e6550d", "#a63603", "#7f270e"]
        }
      }}

    },
    {
      "mark": {
        "type": "text",
        "fontSize": 12,
        "color": "black",
        "align": "center",
        "baseline": "middle"
      },
      "encoding": {
        "text": {
          "field": "Total",
          "type": "quantitative",
          "format": ".0f"
        }
      }
    }
  ]
}
