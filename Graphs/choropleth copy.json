{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "vconcat": [
    {
    "title": "Unemployment Rate throughout Malaysia from 2000 to 2020",
    "width": 250,
    "height": 250,
    "data": {
      "url": "https://raw.githubusercontent.com/sngg0074/FIT3179ASG2/ac8cd508533425dcf2f0e1143dd57d360a518355/Dataset/unemployment_rate_2000_2020.csv",
      "format": {"type": "csv"}
    },
    "transform": [
      {
        "lookup": "state",
        "from": {
          "data": {
            "url": "https://raw.githubusercontent.com/sngg0074/FIT3179ASG2/ac8cd508533425dcf2f0e1143dd57d360a518355/Dataset/malaysia-states.topojson",
            "format": {"type": "topojson", "feature": "states"}
          },
          "key": "properties.Name",
          "fields": ["properties", "type", "geometry"]
        }
      },
      {"filter": "datum.year==year"}
    ],
    "projection": {"type": "equalEarth"},
    "mark": {"type": "geoshape"},
    "encoding": {
      "color": {"field": "unemployment_rate", "type": "quantitative","scale": {
          "type": "threshold",
          "domain": [2, 4, 6, 8],
          "range": ["#fdbe85", "#fd8d3c", "#e6550d", "#a63603", "#7f270e"]
          },
          "title":"Unemployment Rate (Percentage)"
    },
      "tooltip": [
        {"field": "properties.Name", "type": "nominal", "title": "Country"},
        {"field": "unemployment_rate", "type": "quantitative", "title":"Unemployment Rate"}
      ]
    }
    },

    {
      "title": "Intentional Homicide Cases in Malaysian States",
      "width": 250,
      "height": 300,
      "data": {
        "url": "https://raw.githubusercontent.com/sngg0074/FIT3179ASG2/main/Dataset/GDP_Per_Capita_by_State_at_Current_Prices_2005_2022.csv"
      },
      "mark": "bar",
      "encoding": {
        "x": {"field": "State", "type": "nominal"},
        "y": {"field": "Value_RM_Million", "type": "quantitative","scale": {"domain": [0, 150000]}, "title": "GDP (RM) (Million)"},
        "color": {"field": "State", "type": "nominal"}
      },
      "transform": [
        {"filter": "datum.Year==year"}
      ],
      "config": {"view": {"stroke": "transparent"}}
    }
  ],

  "params": [
    {
      "name": "year",
      "value": 2005,
      "bind": {
        "input": "range",
        "min": 2005,
        "max": 2020,
        "step": 1,
        "name": "Select the year:"
      }
    }
  ]
}